<?xml version="1.0"?>
<AttributeExamples xmlns="http://www.attribute-examples.org"
                   xmlns:ex="http://www.attribute-examples.org"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation=
                              "http://www.attribute-examples.org
                               AttributeExamples.xsd">

    <!-- ************************************** -->
    <!--                Version #1              -->
    <!-- ************************************** -->

    <image/>                                                 <!-- Using the default value -->
    <image src="http://www.xfront.com/BestPractices.html"/>  <!-- Not using the default value -->

    <!-- ************************************** -->
    <!--                Version #2              -->
    <!-- ************************************** -->

    <Birthdays_v2>
        <Romeo>05-10-61</Romeo>  <!-- Using the default value -->
        <Juliet ex:format_v2="mm-dd-18yy">11-19-1862</Juliet>
    </Birthdays_v2>

    <!-- ************************************** -->
    <!--                Version #3              -->
    <!-- ************************************** -->

    <Birthdays_v3>
        <Romeo>05-10-61</Romeo>  <!-- Using the default value -->
        <Juliet ex:format_v3="mm-dd-18yy">11-19-1862</Juliet>
    </Birthdays_v3>

    <!-- ************************************** -->
    <!--                Form #2                 -->
    <!-- ************************************** -->

    <AircraftsMaxSpeed>
        <Boeing747>649</Boeing747>
        <f-16 units="knots">1440</f-16>  <!-- must assign units the 
                                              value "knots" -->
    </AircraftsMaxSpeed>

    <!-- ************************************** -->
    <!--                Form #3                 -->
    <!-- ************************************** -->

    <Paint color="lemon-yellow"/>

    <!-- ************************************** -->
    <!--                Form #4                 -->
    <!-- ************************************** -->

    <GeometricObjects>
        <Object shape="circle"/>
        <Object/>  <!-- shape attribute defaults to triangle -->
    </GeometricObjects>

    <!-- ************************************** -->
    <!--                Form #5                 -->
    <!-- ************************************** -->

    <FlagColors>
        <US-flag colors="red white blue"/>
    </FlagColors>

    <!-- ************************************** -->
    <!--                Form #6                 -->
    <!-- ************************************** -->

    <Desk>
        <Item accessory="pencil"/>
        <Item accessory="ruler"/>
    </Desk>

    <!-- ************************************** -->
    <!--                Form #7                 -->
    <!-- ************************************** -->

    <Widget type="frabsat"/>
    <Gadget type="flipper"/>

    <!-- ************************************** -->
    <!--                Form #8                 -->
    <!--   Not implemented yet by validators    -->
    <!-- ************************************** -->

    <!--Location xy="Boston"/-->

    <!-- ************************************** -->
    <!--       Shows use of prohibited          -->
    <!-- ************************************** -->

    <ObjectShapes>
        <glob length="5" height="3" width="1" radius="2" diameter="4"/>
        <!-- computer-monitor is prohibited from having the attributes
             radius, diameter -->
        <computer-monitor length="24" height="20" width="19"/>
    </ObjectShapes>

    <!-- ************************************** -->
    <!-- Shows three ways to declare attributes -->
    <!-- ************************************** -->

    <Beechcraft altitude="3000" ex:speed="300" weight="12000" wing-span="45"/>

</AttributeExamples>
